<div class="job">
  <div class="container">
<h4><b><%= job.title %></b></h4>
<p><%= job.link %></p>
<p><%= job.company %></p>
<p><%= job.location %></p>
<p><%= job.status %></p>
<p><%= button_to "Edit", edit_job_path(job.id), method: :get %></p>
<p><%= button_to "Delete", job, method: :delete, data: { turbo_confirm: "Are you sure?" } %></p>
</div>
</div>